<% provide(:title, 'All books') %>
<hr>
<% if current_user %>
	<% if current_user.librarian? %>
		<%= link_to "Add new book", new_book_path, class: 'btn btn-primary' %>
	<% end %>
<% end %>
<%= form_tag("/books", method: "get", remote: true, class: "books-search") do %>
	<%= text_field_tag :search, nil, placeholder: "Search...", id: "search-bar" %>
	<%= submit_tag "Search", id: "search-button", class: "btn btn-info" %>
<% end %>
<a href="/advanced_search">Advanced Search</a><br>

<hr>

<div class="table-responsive">
	<table class="table table-striped" id="books-table">
		<tr id="table-header">
			<th><strong>Title</strong></th>
			<th><strong>Author</strong></th>
			<th><strong>Genres</strong></th>
			<th><strong>Publisher</strong></th>
			<th><strong>Publication Date</strong></th>
			<th><strong>Num. of pages</strong></th>
			<th><strong>Availability</strong></th>
		</tr>
		<tbody class="books">
			<%= render @books %>
		</tbody>
	</table>
</div>
<%= will_paginate @books, remote: true %>