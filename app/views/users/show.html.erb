<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br>
      </h1>
      <h2>
        <span class="label label-success">Email</span> <%= @user.email %><br>
        <span class="label label-success">Birthday</span> <%= @user.birthday unless @user.birthday.nil? %><br>
        <span class="label label-success">Address</span> <%= @user.address unless @user.address.nil? %><br>
      </h2>
    </section>
  </div>
  <% if @user.librarian? %>
    <div class="librarian-control">
      <%= link_to "Add new book", new_book_path %><br>
      <%= link_to "Show all borrowings", borrowings_path %><br>
      <%= link_to "Show all requests", root_path %><br>
    </div>
  <% end %>
</div>